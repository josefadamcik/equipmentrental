# =====================================================
# Equipment Rental System - Docker Environment Configuration
# =====================================================
# This file contains Docker-specific environment variables.
# Copy this file to .env and customize for your environment.
# =====================================================

# -----------------
# Server Configuration
# -----------------
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# CORS settings
CORS_ENABLED=true
CORS_ORIGIN=*
CORS_CREDENTIALS=false

# Proxy and request settings
TRUST_PROXY=false
REQUEST_TIMEOUT=30000
BODY_LIMIT=10mb

# -----------------
# Database Configuration (PostgreSQL in Docker)
# -----------------

# PostgreSQL connection (using Docker service name)
DATABASE_URL=postgresql://equipmentrental:dev_password_change_in_production@postgres:5432/equipmentrental?schema=public

# PostgreSQL credentials (for docker-compose)
POSTGRES_USER=equipmentrental
POSTGRES_PASSWORD=dev_password_change_in_production
POSTGRES_DB=equipmentrental

# Database connection settings
DATABASE_LOG_QUERIES=true
DATABASE_CONNECTION_TIMEOUT=5000
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# -----------------
# Redis Configuration (Optional)
# -----------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# -----------------
# Payment Service Configuration
# -----------------

# Payment provider: "stripe" or "mock"
PAYMENT_PROVIDER=mock

# Stripe configuration (required if PAYMENT_PROVIDER=stripe)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# -----------------
# Notification Service Configuration
# -----------------

# Notification provider: "email" or "console"
NOTIFICATION_PROVIDER=console

# Email configuration (required if NOTIFICATION_PROVIDER=email)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM=noreply@equipmentrental.com

# -----------------
# Logging Configuration
# -----------------

# Log level: error, warn, info, debug
LOG_LEVEL=debug

# Log format: json, text
LOG_FORMAT=text

# Log destination: console, file, both
LOG_DESTINATION=console

# File path (required if LOG_DESTINATION is "file" or "both")
# LOG_FILE_PATH=/app/logs/app.log
