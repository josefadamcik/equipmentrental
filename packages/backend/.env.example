# =====================================================
# Equipment Rental System - Environment Configuration
# =====================================================

# -----------------
# Server Configuration
# -----------------
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# CORS settings
CORS_ENABLED=true
CORS_ORIGIN=*
# For multiple origins, use comma-separated list:
# CORS_ORIGIN=http://localhost:3000,http://localhost:4200
CORS_CREDENTIALS=false

# Proxy and request settings
TRUST_PROXY=false
REQUEST_TIMEOUT=30000
BODY_LIMIT=10mb

# -----------------
# Database Configuration
# -----------------

# SQLite database URL (for development)
DATABASE_URL="file:./dev.db"

# PostgreSQL database URL (for production)
# DATABASE_URL="postgresql://username:password@localhost:5432/equipmentrental?schema=public"

# MySQL database URL (alternative)
# DATABASE_URL="mysql://username:password@localhost:3306/equipmentrental"

# Database connection settings
DATABASE_LOG_QUERIES=false
DATABASE_CONNECTION_TIMEOUT=5000
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# -----------------
# Payment Service Configuration
# -----------------

# Payment provider: "stripe" or "mock"
PAYMENT_PROVIDER=mock

# Stripe configuration (required if PAYMENT_PROVIDER=stripe)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# -----------------
# Notification Service Configuration
# -----------------

# Notification provider: "email" or "console"
NOTIFICATION_PROVIDER=console

# Email configuration (required if NOTIFICATION_PROVIDER=email)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM=noreply@equipmentrental.com

# -----------------
# Logging Configuration
# -----------------

# Log level: error, warn, info, debug
LOG_LEVEL=info

# Log format: json, text
LOG_FORMAT=text

# Log destination: console, file, both
LOG_DESTINATION=console

# File path (required if LOG_DESTINATION is "file" or "both")
# LOG_FILE_PATH=./logs/app.log
