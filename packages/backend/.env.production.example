# =====================================================
# Equipment Rental System - Production Environment Configuration
# =====================================================
# This file is a template for production deployment.
# Copy this file to .env.production and update with your production values.
# IMPORTANT: Never commit .env.production to version control!
# =====================================================

# -----------------
# Server Configuration
# -----------------
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# CORS settings - IMPORTANT: Set specific origins in production
CORS_ENABLED=true
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com
CORS_CREDENTIALS=true

# Proxy and request settings
TRUST_PROXY=true
REQUEST_TIMEOUT=30000
BODY_LIMIT=10mb

# -----------------
# Database Configuration (PostgreSQL)
# -----------------

# PostgreSQL connection - IMPORTANT: Use strong passwords in production
DATABASE_URL=postgresql://equipmentrental:CHANGE_THIS_PASSWORD@postgres:5432/equipmentrental?schema=public

# PostgreSQL credentials for docker-compose
POSTGRES_USER=equipmentrental
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD
POSTGRES_DB=equipmentrental

# Database connection settings
DATABASE_LOG_QUERIES=false
DATABASE_CONNECTION_TIMEOUT=5000
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# -----------------
# Redis Configuration
# -----------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD

# -----------------
# Payment Service Configuration
# -----------------

# Payment provider
PAYMENT_PROVIDER=stripe

# Stripe configuration - IMPORTANT: Use production keys
STRIPE_SECRET_KEY=sk_live_YOUR_SECRET_KEY
STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_PUBLISHABLE_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET

# -----------------
# Notification Service Configuration
# -----------------

# Notification provider
NOTIFICATION_PROVIDER=email

# Email configuration - IMPORTANT: Configure your SMTP server
EMAIL_HOST=smtp.yourmailprovider.com
EMAIL_PORT=587
EMAIL_SECURE=true
EMAIL_USER=your-email@yourdomain.com
EMAIL_PASS=YOUR_EMAIL_PASSWORD
EMAIL_FROM=noreply@yourdomain.com

# -----------------
# Logging Configuration
# -----------------

# Log level: error, warn, info, debug
LOG_LEVEL=info

# Log format: json, text (use json in production for log aggregation)
LOG_FORMAT=json

# Log destination: console, file, both
LOG_DESTINATION=both

# File path
LOG_FILE_PATH=/app/logs/app.log

# -----------------
# Security
# -----------------
# Add any additional security-related environment variables here
# For example: JWT secrets, API keys, etc.
